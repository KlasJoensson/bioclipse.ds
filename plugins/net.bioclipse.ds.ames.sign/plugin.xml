<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="net.bioclipse.decisionsupport">
      <test
            id="ames.signatures"
            name="Ames Signature Significance"
            class="net.bioclipse.ds.ames.sign.SignSIgRunner"
            endpoint="net.bioclipse.ds.mutagenicity"
            propertycalculator="Ames Signature Significance"
            reportmodel="net.bioclipse.ds.ames.sign.SignSigTestmodel">
            <resource name="modelfile" path="data/bursiSignsXYZ_1.txt.model" />
            <resource name="rangefile" path="data/bursiSignsXYZ_1.txt.range" />
            <parameter name="signaturesfile" value="data/bursi.signatures" />
      </test>
   </extension>
   
   
       <extension
       point="net.bioclipse.cdk.propertyCalculator">
    <Calculator
          class="net.bioclipse.ds.ames.sign.SignSigPropertyCalculator"
          id="Ames Signature Significance">
    </Calculator>
 </extension>
 
 	<extension
  		point="org.eclipse.ui.menus">
   <menuContribution
        locationURI="popup:net.bioclipse.ds.context?after=single">
      <command
           commandId="net.bioclipse.cdk.ui.sdfeditor.addProperty"
           label="Ames Signature Significance"
            icon="icons/form.gif"
           style="push">
        <parameter
              name="net.bioclipse.cdk.ui.sdfeditor.calculatorId"
              value="Signature Significance">
        </parameter>
        <visibleWhen
              checkEnabled="false">
           <with
                 variable="activeEditor">
              <instanceof
                    value="net.bioclipse.cdk.ui.sdfeditor.editor.MultiPageMoleculesEditorPart">
              </instanceof>
           </with>
        </visibleWhen>
     </command>
   </menuContribution>
 </extension>
   

</plugin>
